@model IEnumerable<NutriAnimal.Data.Models.Receipt>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container bg-light rounded ">
        <h1 class="text-center font-weight-bold pt-2">My Receipts</h1>
        <hr class="nutri-hr">
        @if (Model.Count() == 0)
        {

            <h2 class="text-center text-info">You have no receipts.</h2>
            <hr class="nutri-hr">
        }
        else
        {



            <div class="container-fluid bg-light w-75 rounded">

                <div class="row">
                    <div class="col col-md-4 pt-3">
                        <h4 class="font-weight-bold">Id</h4>
                    </div>
                    <div class="col col-md-4 pt-3">
                        <h4 class="font-weight-bold">IssuedOn</h4>
                    </div>
                    <div class="col col-md-4 pt-3">

                    </div>

                </div>
                <hr class="nutri-hr" />

                @foreach (var item in Model.OrderByDescending(order=>order.IssuedOn))
                {
                    <div class="row">
                        <div class="col col-md-4">
                            <span>@item.Id</span>
                        </div>
                        <div class="col col-md-4">
                            <span>@item.IssuedOn.ToString("dd/MM/yyyy HH:mm:ss")</span>

                        </div>
                        <div class="col-md-2"></div>
                        <div class="col col-md-2 ">
                            <a href="/Receipt/Details/@item.Id" class=" btn btn-info ">Details </a>
                        </div>

                    </div>
                    <hr />
                }

            </div>

        }

    </div>

