@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class=" text-center">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12" >
        <form id="profile-form" method="post" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group pl-3 pr-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control shadow p-3 mb-2  rounded" disabled />
            </div>
            <div class="form-group pl-3 pr-3">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control shadow p-3 mb-2 bg-white rounded" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control shadow p-3 mb-2 bg-white rounded" />
                  
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group pl-3 pr-3">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control shadow p-3 mb-2 bg-white rounded" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center pb-3">
                <button id="update-profile-button" type="submit" class="btn btn-primary  btn-info">Save</button>
            </div>
           
        </form>
    </div>
</div>
