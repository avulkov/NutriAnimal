@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
    <div class="text-center">
        <h4>@ViewData["Title"]</h4>
        <partial name="_StatusMessage" for="StatusMessage" />
    </div>

<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="form-control shadow p-3 mb-2 bg-white rounded" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control shadow p-3 mb-2 bg-white rounded" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control shadow p-3 mb-2 bg-white rounded" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center pb-3">
                <button type="submit" class="btn btn-info">Update password</button>
            </div>
           
        </form>
    </div>
</div>
