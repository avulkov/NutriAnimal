@model NutriAnimal.Web.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid justify-content-center nutri-border border-info w-50 rounded">
    <div>
        <h5 class="text-center font-weight-bold">Are you sure you want to delete this Product ?</h5>

        <form asp-action="Delete" class=" d-flex justify-content-around pb-4">
            <input type="submit" value="Delete" class="btn btn-danger font-weight-bold" />
            <a class="btn btn-info font-weight-bold" href="/">Cancel</a>
        </form>

    </div>

</div>

