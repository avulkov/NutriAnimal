@model NutriAnimal.Data.Models.DeliveryCompany

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid justify-content-center  w-50 rounded bg-light">
    <div class="pt-2">
        <h5 class="text-center font-weight-bold">Are you sure you want to delete this delivery company ?</h5>
        <hr class=" nutri-hr" />

        <form asp-action="Delete" class=" d-flex justify-content-around pb-3">
            <input type="submit" value="Delete" class="btn btn-danger font-weight-bold" />
            <a class="btn btn-info font-weight-bold" href="/Administration/DeliveryCompany/All">Cancel</a>
        </form>

    </div>
   
</div>
